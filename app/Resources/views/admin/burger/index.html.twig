{% extends ':admin:templateAdmin.html.twig' %}

    {% block headerBreadcrumb %}
         <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        General Form Elements
        <small>Preview</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Forms</a></li>
        <li class="active">General Elements</li>
      </ol>
    </section>
    {% endblock %}


     {% block content %}
    <h1>Burgers list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Thumbnail</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for burger in burgers %}
            <tr>
                <td><a href="{{ path('burger_show', { 'id': burger.id }) }}">{{ burger.id }}</a></td>
                <td>{{ burger.name }}</td>
                <td>{{ burger.description }}</td>
                <td>{{ burger.price }}</td>
                <div class="col-md-2">
                <img src="{{asset('uploads/img/')~burger.thumbnail}}" class="img-responsive"/>
                </div>
                {% for burger in burger.ingredient %}
                    <td>{{ burger.name }}</td>
                    {% endfor %}
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('burger_show', { 'id': burger.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('burger_edit', { 'id': burger.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('burger_new') }}">Create a new burger</a>
        </li>
    </ul>
{% endblock %}

